<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cajaAzul"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#1C1B1B"
    android:backgroundTint="#03A9F4"
    android:gravity="center_horizontal|center_vertical"
    android:onClick="MostrarDatoEnMensaje"
    android:orientation="vertical"
    tools:context=".Agosto1">

    <EditText
        android:id="@+id/tvDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingresar Dato"
        android:inputType="text" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="YoQuieroQueHagaEstoCuandoHagaClick"
        android:text="Enviar" />

    <TextView
        android:id="@+id/MostrarTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>