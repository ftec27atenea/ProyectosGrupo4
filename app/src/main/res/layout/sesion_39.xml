<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sesion39">

    <!-- Fondo de la vista -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop" />

    <!-- Logo superior -->
    <ImageView
        android:id="@+id/logoSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        android:layout_marginTop="-40dp"
        android:padding="0dp"
        android:layout_gravity="center_horizontal|top"/>

    <!-- Logo inferior -->
    <ImageView
        android:id="@+id/logoInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/login_footnote" />

    <!-- Titulo de la app -->
    <TextView
        android:id="@+id/tituloApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="32dp"
        android:text="@string/login_title"
        android:layout_marginTop="250dp"/>

    <!-- Titulo secundario -->
    <TextView
        android:id="@+id/tituloSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="¡Mi EcoApp, Genial!"
        android:layout_marginTop="250dp" />

    <!-- Contenedor secundario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="380dp"
        android:padding="40dp">

        <!-- Campo de texto de usuario -->
        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/login_user_input"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/login_edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <!-- Campo de texto de contraseña -->
        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/login_pass_input"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/login_edittext_background"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp" />

        <!-- Botón de inicio de sesión -->
        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/login_button_name"
            android:textColor="#FFFFFF"
            android:background="@drawable/login_button_background"
            android:padding="10dp"/>

        <!-- Enlace para recuperar contraseña -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_recover_pass"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</FrameLayout>