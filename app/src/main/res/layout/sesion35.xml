        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#FF0000"
        android:gravity="center"
        android:text="INDIGO"
        android:textColor="#fff"></TextView>

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:background="#FF0000"
        android:gravity="center"
